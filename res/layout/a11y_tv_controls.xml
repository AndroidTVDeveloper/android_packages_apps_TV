<com.android.tv.ui.A11yTvControlsView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/a11y_tv_controls"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="127dp"
    android:layout_marginStart="@dimen/horizontal_overscan_safe_margin"
    android:layout_marginEnd="@dimen/horizontal_overscan_safe_margin"
    android:orientation="vertical"
    android:visibility="gone"
    android:layout_gravity="top"
    android:background="@drawable/menu_background"
    >

  <!-- TODO(b/72489749): use proper strings and layout for channel up down -->
  <TextView android:id="@+id/a11y_shortcuts"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Hide shortcuts"

      android:focusableInTouchMode="true" />

  <TextView android:id="@+id/a11y_channel_up"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Channel up"

      android:focusableInTouchMode="true"
      />
  <TextView android:id="@+id/a11y_channel_down"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/a11y_channel_up"

      android:focusableInTouchMode="true"
      android:text="Channel down"
      />
  <TextView android:id="@+id/a11y_menu"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/a11y_channel_up"
      android:focusableInTouchMode="true"

      android:text="Open menu"
      />
</com.android.tv.ui.A11yTvControlsView>
